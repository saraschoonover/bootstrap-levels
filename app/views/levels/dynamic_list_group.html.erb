<%# The below code creates an array of 10 random names %>
<% names = Array.new(10) { Faker::Name.unique.name  } %>

<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <ul class="listgroup">
        <% names.each do |name| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <p><%= name %></p>
            <span class="badge bg-primary rounded-pill"> <%= name.length %></span>
         </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
